# Iceberg Data Remediation Service - Environment Configuration
# Copy this file to .env and fill in your credentials

# PostgreSQL (Cloud SQL)
REMEDIATION_DB_HOST=34.180.57.7
REMEDIATION_DB_PORT=5432
REMEDIATION_DB_USER=iceberg
REMEDIATION_DB_PASSWORD=your_password_here
REMEDIATION_DB_NAME=iceberg

# Breeze API (ICICI Direct)
# Get these from your ICICI Direct API dashboard
REMEDIATION_BREEZE_API_KEY=your_api_key_here
REMEDIATION_BREEZE_API_SECRET=your_api_secret_here
# Session token from results/breeze_session.json (refresh daily)
REMEDIATION_BREEZE_SESSION_TOKEN=your_session_token_here

# Kite API (for SENSEX only - optional)
REMEDIATION_KITE_API_KEY=your_kite_api_key
REMEDIATION_KITE_ACCESS_TOKEN=your_kite_access_token

# Remediation Settings
REMEDIATION_DEFAULT_STRIKE_RANGE=5
REMEDIATION_BATCH_SIZE=100
REMEDIATION_RATE_LIMIT_DELAY=0.3
REMEDIATION_MAX_RETRIES=5

# Local SQLite for progress tracking
REMEDIATION_PROGRESS_DB_PATH=progress.db

# Logging
REMEDIATION_LOG_LEVEL=INFO
REMEDIATION_LOG_FORMAT=json
